<WalkerScreen>:
    BoxLayout:
        orientation: "vertical"
        Toolbar:
            id: toolbar
            title: "Walkers Unite"
            md_bg_color: app.theme_cls.primary_color
            background_palette: 'Primary'
            background_hue: '500'
            elevation: 10
        MDTabbedPanel:
            id: tab_panel
            tab_display_mode: 'text'
            tab_width_mode: 'stacked'

            MDTab:
                id: walker_tab
                name: 'walker'
                text: "Walkers"
                #icon: "playlist-play"

                GridLayout:
                    cols: 1
                    rows: 0
                    spacing: 5
                    padding: 10
                    ScrollView:
                        do_scroll_x: False
                        scroll_y:0
                        MDList:
                            id: ml
                BoxLayout:
                    size_hint_y: None
                    height: 40
                    spacing: 20

                    MDTextField:
                        id: message
                        #disabled: True
                        hint_text: "Type your message"
                        multiline: False
                        max_text_length: 250
                        valign: 'bottom'
                        helper_text_mode: "on_focus"
                        helper_text: "max 250 chars"
                        line_color_focus: self.theme_cls.opposite_bg_normal
                        on_text_validate:
                            root.send_message(message.text)
                            message.text = ""

            MDTab:
                name: 'online'
                text: 'Online'

                MDLabel:
                    id: online_num
                    font_style: 'Body1'
                    theme_text_color: 'Primary'
                    text: "waiting for recent info"
                    halign: 'center'
            MDTab:
                name: 'third'
                text: 'Third'

                GridLayout:
                    rows: 3
                    cols: 1
                    MDLabel:
                        font_style: 'Body1'
                        theme_text_color: 'Primary'
                        text: "made this for pure fun...2 hours work :-)"
                        halign: 'center'

                    MDLabel:
                        font_style: 'Body1'
                        theme_text_color: 'Primary'
                        text: "used kivy and python"
                        halign: 'center'

                    MDLabel:
                        font_style: 'Body1'
                        theme_text_color: 'Primary'
                        text: "Lone Wolf"
                        halign: 'center'

